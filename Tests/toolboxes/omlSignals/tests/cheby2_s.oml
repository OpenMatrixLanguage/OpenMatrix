	dBc = 20;
	wc1 = (2*pi)*150;
	wc2 = (2*pi)*400;
	wcc = sqrt(wc1*wc2);

	for order=1:14
		[num,den] = cheby2(order, dBc, [wc1, wc2], 's');

		if (length(num) ~= 2 * order + 1)
			break;
		end

		if (length(den) ~= 2 * order + 1)
			break;
		end

		w = [0,wc1-1,wc1,wc1+1,wcc,wc2-1,wc2,wc2+1];
		m = abs(freqs(num,den,w));

