addtoolbox omlSignals

function result = Cheby2LP()
	result = 'fail';
	dBc = 20;
	fc = 300;
	fs = 1000;
	fn = fc / (fs/2);

	for order=1:14
		[num,den] = cheby2(order, dBc, fn);

		if (length(num) ~= order + 1)
			break;
		end

		if (length(den) ~= order + 1)
			break;
		end

		f = [0,fc-1,fc,fc+1,fs/2];
		m = abs(freqz(num,den,f,fs));

		if (abs(m(1) - 1.0) > 1.0e-4)
			break;
		end

		if (-20 * log10(m(2)) > dBc)
			break;
		end

		if (abs(-20 * log10(m(3)) - dBc) > 1.0e-4)
			break;
		end

		if (-20 * log10(m(4)) < dBc)
			break;
		end

		if (mod(order,2) == 0)
			if (abs(-20 * log10(m(5)) - dBc) > 1.0e-4)
				break;
			end
		else
			if (m(5) > 1.0e-4)
				break;
			end
		end

		order = order + 1;
	end

	if (order == 15)
		result = 'pass';
	end
end

function result = Cheby2HP()
