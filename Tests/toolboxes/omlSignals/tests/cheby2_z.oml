		if (mod(order,2) == 0)
			if (abs(-20 * log10(m(1)) - dBc) > 1.0e-4)
				break;
			end
		else
			if (m(1) > 1.0e-4)
				break;
			end
		end

		if (-20 * log10(m(2)) < dBc)
			break;
		end

		if (abs(-20 * log10(m(3)) - dBc) > 1.0e-4)
			break;
		end

		if (-20 * log10(m(4)) > dBc)
			break;
		end

		if (abs(m(5) - 1.0) > 1.0e-4)
			break;
		end

		if (-20 * log10(m(6)) > dBc)
			break;
		end

		if (abs(-20 * log10(m(7)) - dBc) > 1.0e-4)
			break;
		end

		if (-20 * log10(m(8)) < dBc)
			break;
		end

		if (mod(order,2) == 0)
			if (abs(-20 * log10(m(9)) - dBc) > 1.0e-4)
				break;
			end
		else
			if (m(9) > 1.0e-4)
				break;
			end
		end

		order = order + 1;
	end

	if (order == 15)
		result = 'pass';
	end
end

