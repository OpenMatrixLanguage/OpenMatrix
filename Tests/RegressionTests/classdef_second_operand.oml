classdef ratnum
    properties (Access = private)
	    n
		d
	end

	methods
	    function r = ratnum(numerator, denomenator)
		    r.n = numerator;
			r.d = denomenator;
		end

		function disp(r)
		    if (r.d ~= 1)
			    fprintf('%d/%d\n', r.n, r.d);
			else
			    fprintf('%d\n', r.n);
			end
		end

		function r = plus(r1, r2)
			if (class(r2) == 'ratnum')
				if (class(r1) == 'ratnum')
					r = ratnum(r1.n*r2.d + r2.n*r1.d, r1.d * r2.d);
				elseif (isscalar(r1))
					r = ratnum(r2.d*r1 + r2.n, r2.d);
				end
		    elseif (isscalar(r2))
			    r = ratnum(r1.d*r2 + r1.n, r1.d);
			else
			    r = 0;
			end
		end

		function r = mpower(r1, r2)
		    if (isscalar(r2))
			    r = ratnum(r1.n^r2, r1.d^r2);
			else
			    r = 0;
			end
		end

		function r = uminus(r1)
			r = ratnum(-r1.n, r1.d);
		end

		function r = sqrt(r)
		    r = sqrt(r.n/r.d);
		end
	end
end

