classdef ratnum
    properties (Access = private)
	    n
		d
	end

	methods
	    function r = ratnum(numerator, denomenator)
		    if (nargin == 2)
				r.n = numerator;
				r.d = denomenator;
			elseif (nargin == 1)
			    r.n = numerator;
				r.d = 1;
			else
				r.n = 0;
				r.d = 1;
			end
		end

		function disp(r)
		    if (r.d ~= 1)
			    fprintf('%d/%d\n', r.n, r.d);
			else
			    fprintf('%d\n', r.n);
			end
		end

		function r = plus(r1, r2)
		    if (isscalar(r2))
			    r = ratnum(r1.d*r2 + r1.n, r1.d);
			elseif (class(r2) == 'ratnum')
				r = ratnum(r1.n*r2.d + r2.n*r1.d, r1.d * r2.d);
			else
			    r = 0;
			end
		end
	end
end

a = ratnum(1,3);
a(3) = ratnum(1,2);
a(1)
a(2)
a(3)