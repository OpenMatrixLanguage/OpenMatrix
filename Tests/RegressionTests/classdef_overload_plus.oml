classdef ratnum
    properties (Access = private)
	    n
		d
	end

	methods
	    function r = ratnum(numerator, denomenator)
		    r.n = numerator;
			r.d = denomenator;
		end

		function disp(r)
		    if (r.d ~= 1)
			    fprintf('%d/%d\n', r.n, r.d);
			else
			    fprintf('%d\n', r.n);
			end
		end

		function r = plus(r1, r2)
		    if (isscalar(r2))
			    r = ratnum(r1.d*r2 + r1.n, r1.d);
			else
				r = ratnum(r1.n*r2.d + r2.n*r1.d, r1.d * r2.d);
			end
		end
	end
end

a = ratnum(1,3);
b = ratnum(1,2);
c = a + b
d = c + 1
