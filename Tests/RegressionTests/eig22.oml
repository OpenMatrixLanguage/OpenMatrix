V1 = [3+4i, 3-4i, 2, -3;
	1,     1,     3, 4;
	  4-3i, 4+3i,  4, 2;
	  7,     7,     1, 5];

L1 = diag([5 + 12i, 5 - 12i, 0, 7]);

% construct a matrix with standard Eigen decomposition, to become inv(B)*A
BinvA = real(V1 * L1 * inv(V1));

% select an arbitrary invertible B, solve for A
B = [5, 4, 3, 2; 4, -2, 0, 1; 3, 0, 6, -1; 2, 1, -1, 9];
A = B * BinvA;

% solve generalized Eigen decomposition
[V2, L2] = eig(A,B)

% show that new Eigen vectors differ by only a scalar
checkV = V1 ./ V2

